snippet notes "main tex files for latex notes"

\documentclass[fleqn,openany]{extbook}
\usepackage[a4 paper,margin=1in,footskip=0.5in]{geometry}

\usepackage[utf8]{inputenc}
\usepackage[english]{babel}

%% Package Declarations:

\usepackage{graphicx}
\usepackage{wrapfig}
\usepackage{tabularx}
\usepackage{float}

\usepackage{titlesec}
\usepackage{fancyhdr}

\usepackage[table]{xcolor}
\usepackage{soul}

\usepackage{enumitem}
\usepackage{multicol}
\usepackage{array}

% Table of Contents:
\usepackage{tocloft}
\usepackage[hidelinks,linktoc=all]{hyperref}

\usepackage{amsmath}
\usepackage[version=4]{mhchem}

%% Configs:

\setlength{\parindent}{0em}
\setlength{\parskip}{1.5em}

\pagestyle{fancy}
\fancyhf{}
\lhead{\nouppercase\leftmark}
% \rhead{\nouppercase\rightmark}
% \cfoot{\thepage}

\titleformat{\chapter}[frame]{\bfseries\huge}{Chapter \thechapter}{1em}{}
\titleformat{\section}{\bfseries\huge}{}{0em}{}
\titleformat{\subsection}{\bfseries\Large\lowercase}{}{0em}{}[\color{gray}\titlerule]
\titleformat{\subsubsection}{\bfseries\Large\lowercase}{}{0em}{}
\titleformat{\paragraph}{\large\lowercase}{}{0em}{}

\titlespacing*{\chapter}{0pt}{-30pt}{15pt}
\titlespacing*{\section}{0pt}{2pt}{5pt}
\titlespacing*{\subsection}{0pt}{2pt}{5pt}
\titlespacing*{\subsubsection}{0pt}{2pt}{0pt}

\setlength\cftparskip{-1pt}
\setlength\cftbeforechapskip{1pt}
\setlength\cftaftertoctitleskip{2pt}

% Multicolumns Configs:
\setlength{\columnsep}{1cm}
\setlength{\columnseprule}{1pt}
\def\columnseprulecolor{\color{black}}

\sethlcolor{LightCyan}

\graphicspath{{.img/}}

\renewcommand{\theenumii}{\roman{enumii}}

\begin{document}

\begin{titlepage}

\begin{center}
\vspace*{2.5cm}
{\Huge\color{red}\textbf{${1:Title}}}\\\\
\vspace{1cm}
{\Large\color{BloodRed}\textbf{Prof: ${2:Lecturer}}}\\\\
\vspace{1.5cm}
{\Large\color{ChartReuse3}\textbf{SEMESTER VI}}\\\\
\end{center}
\end{titlepage}

% \tableofcontents
% \addcontentsline{}{}{}
% \addtocontents{toc}{~\hfill\textbf{Page}\par}

\end{document}
endsnippet

