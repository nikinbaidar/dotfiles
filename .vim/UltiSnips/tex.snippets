snippet fbox "box environment"
\fbox{
\begin{minipage}{\textwidth}

$0

\end{minipage}
}
endsnippet

snippet iff "multi-line comments, ignored by latex compiler" b
\iffalse
	$0
\fi
endsnippet

snippet fig "Figure environment" b
\begin{figure}[H]
	\centering
	\includegraphics[width=${1:0.8}\textwidth]{${2:name}}
\end{figure}
endsnippet

snippet cap "figure caption"
\caption{$0}
endsnippet

snippet sec "Section"
\section{${1:${VISUAL:section name}}}
endsnippet

snippet sub "Subsection"
\subsection{${1:${VISUAL:subsection name}}}
endsnippet

snippet ssub "Subsubsection"
\subsubsection{${1:${VISUAL:subsubsection name}}}
endsnippet

snippet vs "Vertical Space"
\vspace{${1:-10}pt}
endsnippet

snippet hs "Horizontal Space"
\hspace*{${1:2}pt}
endsnippet

snippet enlarge "Squeeze Contents"
\enlargethispage{\baselineskip}
endsnippet

snippet href "Creating Cross references"
\hyperref[${1:Reference Label}]{\textcolor{blue}{${2:Reference anchor}}}
endsnippet

snippet noitem "Itemize w/o separation" b
\begin{itemize}[nosep]
	\item $0
\end{itemize}
endsnippet

snippet noenum "Enumerate w/o separation" b
\begin{enumerate}[nosep]
	\item $0
\end{enumerate}
endsnippet


