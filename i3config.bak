# Variable declarations:

set $Ctrl control
set $Alt  mod1
set $sup  mod4

set $right l
set $up    k
set $down  j
set $left  h

set $parent p
set $child  c

set $wider    w
set $narrower n
set $taller   t
set $shorter  s

set $CR Return

# Scripts

## prompts: shutdown, log out

bindsym $Ctrl+$Alt+P exec bash ~/scripts/promptPowerdown.sh
bindsym $Ctrl+$Alt+S exec bash ~/scripts/promptSignoff.sh
bindsym $Ctrl+$Alt+L exec bash ~/scripts/sleep.sh

# Application Shortcuts

set $journal /home/nikin/notes/journal/

bindsym $sup+d   exec bash ~/scripts/thisScriptDoesNothing.sh
bindsym $sup+$CR exec xterm
bindsym $sup+r   exec rofi -show run
bindsym $sup+a   exec rofi -show
bindsym $sup+b   exec firefox
bindsym $sup+z   exec tabbed -c zathura -e
bindsym $sup+m   exec xterm cmus
bindsym $sup+t   exec xterm -T floatthis -e vim $journal/todo.md
bindsym $sup+n   exec xterm -T floatthis -e vim $journal/scribbles.md

# Utilites

## volume control FIXME

## screenshots

bindsym $sup+x exec scrot '%Y-%m-%d:%H%M%S.png' --border --focused \
    --exec 'mv $f "/home/nikin/pictures/screenshots/"'

bindsym $sup+shift+x exec scrot '%Y-%m-%d:%H%M%S.png' --border \
    --exec 'mv $f "/home/nikin/pictures/screenshots/"'

# Containers

## change focus

bindsym $sup+$up     focus up
bindsym $sup+$down   focus down
bindsym $sup+$left   focus left
bindsym $sup+$right  focus right

bindsym $sup+shift+$parent focus parent
bindsym $sup+shift+$child  focus child

## prevent focus change on mouse hover

focus_follows_mouse no

## move focused containers

bindsym $sup+shift+$up    move up
bindsym $sup+shift+$down  move down
bindsym $sup+shift+$left  move left
bindsym $sup+shift+$right move right

## resizing focused containers

bindsym $sup+shift+$wider    resize grow   width  10 px
bindsym $sup+shift+$narrower resize shrink width  10 px
bindsym $sup+shift+$taller   resize grow   height 10 px
bindsym $sup+shift+$shorter  resize shrink height 10 px

## toggle split position for currently focused containers

bindsym $sup+space split toggle

## enter fullscreen mode for the focused container

bindsym $sup+f fullscreen toggle

## close focused container

bindsym $sup+q kill

bindsym --release $sup+shift+q exec xkill

# Workspaces

## start-off with workspace 0

workspace 0 output primary

## workspace switches

bindsym $sup+0 workspace 0:
bindsym $sup+1 workspace 1:
bindsym $sup+2 workspace 2:
bindsym $sup+3 workspace 3:
bindsym $sup+4 workspace 4:
bindsym $sup+5 workspace 5:
bindsym $sup+6 workspace 6:
bindsym $sup+7 workspace 7:
bindsym $sup+8 workspace 8:
bindsym $sup+9 workspace 9:

## move focused containers to workspace

bindsym $sup+shift+0 move container to workspace 0:
bindsym $sup+shift+1 move container to workspace 1:
bindsym $sup+shift+2 move container to workspace 2:
bindsym $sup+shift+3 move container to workspace 3:
bindsym $sup+shift+4 move container to workspace 4:
bindsym $sup+shift+5 move container to workspace 5:
bindsym $sup+shift+6 move container to workspace 6:
bindsym $sup+shift+7 move container to workspace 7:
bindsym $sup+shift+8 move container to workspace 8:
bindsym $sup+shift+9 move container to workspace 9:

# Appearance

font pango:Monospace 0

exec /usr/bin/picom --config /home/nikin/.config/picom.conf

exec_always feh --bg-fill --no-fehbg --randomize \
    /home/nikin/pictures/wallpapers/*

exec_always /home/nikin/.config/screenlayout/my_monitor_setup.sh

## floating configs

for_window [ title="floatthis" ] floating enable
